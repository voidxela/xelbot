# Discord Bot Configuration
# Copy this file to .env and fill in your actual values

# Discord Bot Token (Required)
# Get this from Discord Developer Portal -> Your Application -> Bot -> Token
DISCORD_TOKEN=your_discord_bot_token_here

# Database Configuration (Required)
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://username:password@localhost:5432/discord_bot

# Logging Configuration (Optional)
# Set to DEBUG, INFO, WARNING, ERROR, or CRITICAL
LOG_LEVEL=INFO

# Bot Configuration (Optional)
# Maximum time in seconds to wait for Jeopardy game answers
JEOPARDY_TIMEOUT=30

# Web Scraping Configuration (Optional)
# Delay between requests when scraping Jeopardy questions (in seconds)
SCRAPER_DELAY=2.0

# Development Configuration (Optional)
# Set to True to enable development mode features
DEBUG_MODE=False